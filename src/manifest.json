{
	"manifest_version": 2,

	"name": "Youtube Playlist",
	"description": "This extension helps you manage your current youtube playlist",
	"version": "1.0",

	"background": {
		"scripts": [
			"lib/underscore.js",
			"event.js" ,
			"video.js",
			"playlist.js",
			"main.js"
		]
	},
	"permissions": [
		"tabs",
		"webNavigation",
		"http://*/*",
		"https://*/*",
		"*://*.youtube.com/*"
	],
	"content_scripts": [
		{
			"matches": ["http://www.youtube.com/watch*"],
			"js": ["inject.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}
