{
	"manifest_version": 2,
	"name": "Youtube Playlist",
	"description": "This extension helps you manage playback of YouTube videos, creating playlist based on the tabs you have open, this way the videos is preloaded and thus makes the shifting between videos almost gapless.",
	"version": "1.0.0",
	"background": {
		"scripts": [
			"vendor/underscore.js",
			"background/event.js" ,
			"background/video.js",
			"background/playlist.js",
			"background/main.js"
		]
	},
	"icons": {
		"16": "browserAction/img/logo_20.gif",
		"48": "notification/img/logo_48.png"
	},
	"permissions": [
		"tabs",
		"webNavigation",
		"notifications",
		"*://*.youtube.com/*"
	],
	"content_scripts": [
		{
			"matches": ["http://www.youtube.com/watch*"],
			"js": ["contentScript/inject.js"]
		}
	],
	"browser_action": {
		"default_title": "YouTube Playlist",
		"default_icon": "browserAction/img/logo_20.gif",
		"default_popup": "browserAction/playlist.html"
	},
	"web_accessible_resources": [
		"notification/img/logo_48.png"
	]
}
